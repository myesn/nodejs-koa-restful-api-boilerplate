{
  "name": "nodejs-koa-restful-api-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build-ts": "tsc",
    "build": "yarn build-ts && yarn lint",
    "debug": "yarn build && yarn watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect -r dotenv/config --watch .env.production --watch dist dist/server.js dotenv_config_path=.env.production",
    "serve": "node -r dotenv/config dist/server.js dotenv_config_path=.env.production",
    "start": "yarn serve",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-ts\" \"npm:serve-debug\"",
    "watch-node": "nodemon --inspect -r dotenv/config --watch .env.development --watch dist dist/server.js dotenv_config_path=.env.development",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-ts\" \"npm:watch-node\""
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "koa": "^2.13.4"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/koa": "^2.13.4",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "concurrently": "^6.5.1",
    "eslint": "^8.5.0",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "typescript": "^4.5.4"
  }
}
